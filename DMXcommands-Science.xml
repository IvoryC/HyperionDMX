  <event type="SCAN_IN_PROGRESS" continuous="yes">

    <!-- pulsing green scan button while scan in progress -->

    <timeblock mseconds="1000">
     	<setvalue index="205" value="255" change="-200"/>	<!-- green value of scan button -->
